<div id="modal1" class="modal">
    <form asp-action="RegistrarUsuario" method="post">
        <div class="modal-content">
            <h4 class="center">Registro</h4>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">account_box</i>
                            <input id="usuario" type="text" name="avatar" class="validate">
                            <label for="usuario">Usuario</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">verified_user</i>
                            <input id="contra" type="password" name="contrasena" class="validate">
                            <label for="contra">Contraseña</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">business</i>
                            <input id="nombre" type="text" name="nombre" class="validate">
                            <label for="nombre">Nombre</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">language</i>
                            <input id="sitio" type="text" name="correo" class="validate">
                            <label for="sitio">Correo Electronico</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <h4 class="center"><button type="submit" class="modal-action  modal-close waves-effect waves-green btn-flat">Registrar</button></h4>
        </div>
    </form>
</div>
<div id="modal2" class="modal modal-fixed-footer">
    <form asp-action="LoginUsuario" method="post">
        <div class="modal-content">
            <h4 class="center"><a><img src="https://preview.ibb.co/hdamtx/Imagen1.png" style="height:100px" /></a></h4>
