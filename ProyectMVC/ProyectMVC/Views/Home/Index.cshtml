                <div class="input-field col s12">
                    <i class="material-icons prefix">account_box</i>
                    <input id="user" type="text" name="avatar" class="validate">
                    <label for="user">Usuario</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">verified_user</i>
                    <input id="contrasena" type="password" name="contrasena" class="validate">
                    <label for="contrasena">Contraseña</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <h4 class="center"><button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat">Iniciar</button></h4>
        </div>
